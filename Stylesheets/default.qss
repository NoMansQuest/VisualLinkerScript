/*
 *
 * Menu bar and items
 *
 */
QMenuBar 
{    
    padding-left: 5px;
    padding-top: 5px;
    padding-right: 5px;
    padding-bottom: 2px;
    border-top: 1px solid @MenuBorder;
    background: @MenuDefault;
    font-family: 'Segoe UI' ;
    color: @ActiveTextColor;
    font-size: 10pt;
}

QMenuBar::item
{
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 1px;
    padding-bottom: 1px;
    background: @MenuDefault;
}

QMenuBar::item:selected
{    
    padding-top: 4px;
    padding-bottom: 4px;
    border: 1px solid @MenuBorder;
    background: @MenuHighlighted;
}

QMenu
{
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 6px;
    padding-bottom: 6px;
    border: 1px solid transparent;
    background: @MenuOpened;
    color: @ActiveTextColor;
}

QMenu:selected
{    
    background: @MenuHighlighted;
}

QMenu::item 
{
    border: 1px solid transparent; /* 1px border with silver color */    
    padding: 2px 5px;
}

QMenu::item:selected 
{
    /* Selected item properties */
    border: 1px solid @MenuBorder; /* 1px border with silver color */
    background: @MenuHighlighted;
    padding: 2px 5px;
}

/*
 *
 * Scroll Bars
 *
 */
QScrollBar {
    background: @level1;
    border-radius: 0px;
}

QScrollBar:horizontal {
    height: 13px;
}

QScrollBar:vertical {
    width: 13px;
}

QScrollBar::handle {
    background: @level3;
    border-radius: 0px; 
}

QScrollBar::handle:hover {
    background: @level4;
}

QScrollBar::handle:horizontal {
    height: 25px;
    min-width: 85px;
}

QScrollBar::handle:vertical {
    width: 25px;
    min-height: 85px;
}

QScrollBar::add-line,
QScrollBar::sub-line {
    border: none;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/*
 * QPushbutton
 */

QPushButton 
{
    background-color: @DialogBackground;
    border: 2px solid transparent;
}

QPushButton:hover:!pressed {
    background-color: @ButtonHoverColor;    
}

QPushButton:hover:pressed {
    background-color: @ButtonPressedColor;
    border: 2px solid @level7;
}


/*
 * QComboBox
 */

QComboBox
{
    border: 0px solid transparent;
    background-color: @StaticComboboxBackground;
    color: white;
}

QComboBox[editable="true"]
{
    background-color: @EditableComboboxBackground;
}   

/*
 * QFlatCheckBox
 */

QFlatCheckBox 
{
    background-color: @DialogBackground;
    border: 2px solid transparent;
}

QFlatCheckBox:hover:!pressed 
{
    background-color: @ButtonHoverColor;    
}

QFlatCheckBox:hover:pressed {
    background-color: @ButtonPressedColor;
    border: 2px solid @level7;
}

QFlatCheckBox[IsChecked="true"] {
    background-color: @ButtonPressedColor;
    border: 2px solid @level7;
}

/*
 *
 * Splitters
 *
 */
QSplitter::handle
{
    background: @splitterBackground;
}

QSplitter::handle:horizontal {
    width: 10px;
    background: transparent;
    border: 0px;
    margin: 0px;
    padding: 0px;
}

QSplitter::handle:vertical {
    height: 10px;
    background: transparent;
    border: 0px;
    margin: 0px;
    padding: 0px;
}

QSplitter::handle:horizontal:hover {
    background: @splitterHandleHover;
}

QSplitter::handle:vertical:hover {
    background: @splitterHandleHover;
}

QSplitter::handle:pressed {
    background: @splitterHandlePressed;
}

QSplitter::handle:hover {
    background: @splitterHandleHover;
}

/*
 *
 * QScintilla
 *
 */
QsciScintilla
{
    padding: 0px;
    border: 0px solid #000000;
    background: @level4;
}


