/*
 * QSearchPopup
 */
QSearchPopup 
{
    background-color: @DialogBackground;
    border-bottom: 4px solid @PurpleRibbon;
}

QSearchPopup[HasFocus="true"]
{
    background-color: red;
    border-bottom: 4px solid @PurpleRibbon;
}


